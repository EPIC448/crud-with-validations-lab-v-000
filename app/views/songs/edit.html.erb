<h2>Song "<%= @song.title %>"</h2>


<%= form_tag song_path(@song), method: "patch" do %>

  <div class="field">
    <%= label_tag "song_title", "song_Title" %>
    <%= text_field_tag "song_title", @song.title %>
  </div>

 <div class="field">
    <%= label_tag "artist_name", "Artist_name" %>
    <%= text_field_tag "artist_name", @song.artist_name %>
  </div>


  <div class="field">
    <%= label_tag "song_released", "song_released" %>
    <p>Must be either "Released" or "Non-Released".</p>
    <%= text_field_tag "song_released", @song.released %>
  </div>


  <div class="field">
    <%= label_tag "song_release_year", "song_release_year" %>
    <p>Must be either "Release_year" or "Non-Release_year".</p>
    <%= text_field_tag "song_release_year", @song.release_year %>
  </div>

  <div class="field">
    <%= label_tag "title", "Title" %>
    <br />
    <%= text_area_tag "title", @song.title %>
  </div>
  <%= submit_tag "Update" %>
<% end %>

